<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:id="@+id/shake_container"
    android:orientation="vertical"
    >
    <TextView
        android:text="Shake the phone to detect to shake event"
        android:id="@+id/genera_txv"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Status : Activated"
        android:textSize="24sp"
        android:id="@+id/active_status"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Status : Not Activated"
        android:textSize="24sp"
        android:id="@+id/deactive_status"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/active_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Shake Detection" />
    <Button
        android:id="@+id/deactive_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disable Sahke Detection" />
</LinearLayout>